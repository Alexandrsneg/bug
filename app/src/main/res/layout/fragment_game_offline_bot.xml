<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ru.sneg.android.bug.game.gameViews.GamePlayFieldFirstPlayerView
        android:id="@+id/gameOfflineBotFirstPlayerView"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_marginStart="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ru.sneg.android.bug.game.gameViews.GamePlayFieldSecondPlayerView
        android:id="@+id/gameOfflineBotSecondPlayerView"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_player_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/bones"
        android:text="@string/player_1"
        android:textColor="#FCE203"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/gameOfflineBotFirstPlayerView"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toStartOf="@+id/gameOfflineBotFirstPlayerView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_bot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/bones"
        android:text="@string/android"
        android:textColor="#FCE203"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/gameOfflineBotSecondPlayerView"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="@+id/gameOfflineBotSecondPlayerView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bug_heads"
        android:layout_width="217dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bugs_heads" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="52dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/tv_bot"
        app:layout_constraintTop_toTopOf="@+id/tv_bot"
        app:srcCompat="@android:mipmap/sym_def_app_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>
